{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SynchDoc",
  "version": "0.1.5",
  "identifier": "com.synchdoc.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SynchDoc",
        "width": 1000,
        "height": 800,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "identifier": "com.synchdoc.desktop",
    "publisher": "SynchDoc",
    "category": "Productivity"
  }
}
