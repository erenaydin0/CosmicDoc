{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "opener:default",
    "dialog:allow-save",
    "dialog:allow-open",
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        { "path": "$DOWNLOAD/*" },
        { "path": "$DESKTOP/*" },
        { "path": "$DOCUMENT/*" },
        { "path": "$HOME/*" }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$DOWNLOAD/*" },
        { "path": "$DESKTOP/*" },
        { "path": "$DOCUMENT/*" },
        { "path": "$HOME/*" }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$DOWNLOAD/*" },
        { "path": "$DESKTOP/*" },
        { "path": "$DOCUMENT/*" },
        { "path": "$HOME/*" }
      ]
    },
    "fs:allow-exists"
  ]
}
